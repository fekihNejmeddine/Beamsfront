{
  "compilerOptions": {
    "jsx": "react-jsx", 
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "module": "esnext",
    "target": "esnext",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["vite/client", "node"]
  },
  "include": [
    "src/**/*",
    "src/assets/**/*", 
    "../index.tsx"
  ]
}
